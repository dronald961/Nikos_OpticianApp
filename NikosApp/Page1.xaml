<Page x:Class="NikosApp.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NikosApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <StackPanel Margin="0,70,0,0" >
        <Label Content="Φίρμα:"  Margin="0,0,0,0"/>
        <ComboBox x:Name="BrandComboBox" Width="100"/>

        <Label Content="Μοντέλο:"/>
        <ComboBox x:Name="ModelComboBox" Width="100" Margin="0,0,1810,10"/>

        <Label Content="Χρήση:"/>
        <ComboBox x:Name="UsageComboBox" Width="100" Margin="0,0,1810,10"/>

        <Label Content="Ανανέωση:"/>
        <ComboBox x:Name="RenewalComboBox" Width="100" Margin="0,0,1810,10"/>

        <Label Content="Λιανική Τιμή:"/>
        <ComboBox x:Name="RetailPriceComboBox" Width="100" Margin="0,0,1810,10"/>

        <Label Content="Χρονολογία:"/>
        <ComboBox x:Name="YearComboBox" Width="100" Margin="0,0,1810,10"/>
        <Label HorizontalAlignment="Left" Content="pagakia" Width="151" RenderTransformOrigin="-0.603,0.481" Height="21"/>
        <ListBox Height="22" d:ItemsSource="{d:SampleData ItemCount=5}" Width="199" RenderTransformOrigin="-0.847,-0.342"/>
    </StackPanel>
</Page>
